<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="com.org.opera.domain">
	<!-- 映射FileLog持久化类  -->
	<class name="FileLog" table="fileLog">
		
		<id name="id" column="id">
			<!-- 定义主键生成器策略 -->
			<generator class="native"/>
		</id>
		<!-- 用于映射普通属性 -->
		<property name="path" type="java.lang.String" not-null="true"/>
		<property name="initiateName" type="java.lang.String" not-null="true"/>
		<property name="uploadName" type="java.lang.String" not-null="true"/>
		<property name="description"></property>
		<property name="copyright"></property>
		<property name="size"></property>
		<property name="sourceId"></property>
		<property name="position" not-null="true"></property>
		<property name="photographer" not-null="true"></property>
	</class>
</hibernate-mapping>
