<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping	package="com.org.opera.domain">	

    <class name="OtherPhoto" table="otherPhoto">
        <id name="otherPid" column="otherPid">
            <generator class="native"/>
        </id>
        <property name="title"/>
        <property name="uploadName"/>
        <property name="description" type="text" length="5000"/>
        <property name="path"></property>
        <many-to-one name="photo" class="Photo" column="photoId"></many-to-one>
    </class>


</hibernate-mapping>